<div class="row">
  <div class="col-lg-4 col-md-5">
    <div class="card card-user">
      <div class="image">
        <%= image_tag "hero.jpg", class: "img-square center-block", alt: "user profile picture" %>
      </div>
      <div class="content">
        <div class="author">
          <%= image_tag @user.photo.url(:medium), class: "avatar border-white", alt: "user profile picture" %>
          <h4 class="title"><%=@user.full_name %><br />
             <a href="#"><small><%= @user.role.try(:role) %></small></a>
          </h4>
        </div>
        <br>
        <p class="description text-center">

        </p>
          <%=link_to "Update", edit_human_resources_employee_path(@user), class: "btn btn-primary btn-block" %>
      </div>




<br>
    </div>
    <div class="card">
      <div class="header">
        <h4 class="title">Info</h4>
      </div>
      <div class="content">
        <ul class="list-unstyled team-members">
          <li>
            <div class="row">
              <div class="col-xs-3">
                <div class="avatar">
                </div>
              </div>
              <div class="col-xs-6">
                <%#=@user.occupation.employer %>
                <br />
                <span class="text-muted"><small><%=@user.role.try(:role) %></small></span>
                <br />
                <span class="text-muted"><small><%#=@user.occupation.contact_number%></small></span>

              </div>
              <div class="col-xs-3 text-right">
                <%#=link_to edit__occupation_path(@user.occupation) do %>
                  <a class="btn btn-sm btn-warning btn-icon edit-occupation-link" title="Edit Occupation"><i class="fa fa-pencil"></i></a>
                <%# end %>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card">
      <div class="header">
        <h4 class="title"> Loans
          <span class="pull-right"><%=link_to "New Loan", new_loans_section_user_loan_path(@user), class: "btn btn-primary" %></span>
        </h4>
        <hr>
      </div>
      <div class="content">
        <%=render 'loans_section/loans/loan', loans: @user.loans %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card">
      <div class="header">
        <h4 class="title"> Share Capital
          <span class="pull-right"><%=link_to "Open Share Capital Account", new_user_share_capital_path(@user), class: "btn btn-primary" %></span>
        </h4>
        <hr>
      </div>
      <div class="content">
        <%=render "share_capitals/share_capital", share_capital: @user.share_capital if @user.share_capital %>
      </div>
    </div>
  </div>

</div>
