<ul class="list-unstyled team-members">
  <li id="current_item">
    <div class="row">
      <div class="col-xs-2">
          <%=line_item.quantity %> <%=line_item.product.unit %>
      </div>
      <div class="col-xs-5">
        <%=line_item.product.name%>
        <br />
        <span class="text-muted"><small><%=number_to_currency line_item.product.price %></small></span>
      </div>
      <div class="col-xs-3 text-right">
        <p><%=number_to_currency line_item.total_price %></p>
      </div>
      <div class="col-xs-2 text-right">
        <%=link_to store_line_item_path(line_item), method: :delete, confirm: 'Are you sure?' do %>
        <span class="btn btn-danger btn-icon btn-xs"><i class="fa fa-times"></i> </span>
        <% end %>
      </div>
    </div>
  </li>
</ul>
