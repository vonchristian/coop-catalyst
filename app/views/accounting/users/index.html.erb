<div class="row">
  <% @users.each do |user| %>
  <%=link_to user_path(user) do %>
  <div class="col-lg-4  col-sm-4 col-md-4 col-xs-12">
                         <div class="card card-user">
                             <div class="image">
                             </div>
                             <div class="content">
                                 <div class="author">
                                   <%=image_tag(user.photo.url(:thumb), class: "avatar border-white") %>
                                   <!-- <img class="avatar border-white" src="assets/img/faces/face-2.jpg" alt="..."/> -->
                                   <h4 class="title"><%=user.full_name %><br />
                                      <a href="#"><small><%=user.occupation.try(:position) %></small></a>
                                   </h4>
                                 </div>
                             </div>
                             <hr>
                             <div>
                                 <div class="row">
                                     <div class="col-md-3 col-md-offset-1">
                                       <h5><%=image_tag("pie-chart-1.png", width: 30, height: 30) %></h5>
                                     </div>
                                     <div class="col-md-6">
                                         <h5><%=number_to_currency 1200000 %><br /><small>Share Capital</small></h5>
                                     </div>
                                   </div>
                                   <div class="row">
                                       <div class="col-md-3 col-md-offset-1">
                                         <h5><%=image_tag("piggy-bank.png", width: 30, height: 30) %></h5>
                                       </div>
                                       <div class="col-md-6">
                                           <h5><%=number_to_currency 1200000 %><br /><small>Savings Account</small></h5>
                                       </div>
                                     </div>
                             </div>
  </div>
</div>
</div>
<% end %>
<% end %>
</div>
