<div class="row">
  <div class="col-lg-4 col-md-5">
    <div class="card card-user">
      <div class="image">
        <%= image_tag "hero.jpg", class: "img-square center-block", alt: "user profile picture" %>
      </div>
      <div class="content">
        <div class="author">
          <%= image_tag @user.photo.url(:medium), class: "avatar border-white", alt: "user profile picture" %>
          <h4 class="title"><%=@user.full_name %><br />
             <a href="#"><small><%=@user.position %></small></a>
          </h4>
        </div>
        <br>
        <p class="description text-center">

        </p>
      </div>
      <hr>
      <br>
      <div class="text-center">
        <div class="row">
          <div class="col-md-2">

          </div>
          <div class="col-md-8">
                <%=link_to "Update", edit_user_path(@user), class: "btn btn-primary btn-block" %>
          </div>
          <div class="col-md-2">
          </div>
        </div>
        <br>
      </div>
    </div>
    <div class="card">
      <div class="header">
        <h4 class="title">Info</h4>
      </div>
      <div class="content">
        <ul class="list-unstyled team-members">
          <li>
            <div class="row">
              <div class="col-xs-3">
                <div class="avatar">
                </div>
              </div>
              <div class="col-xs-6">
                <%=@user.occupation.employer %>
                <br />
                <span class="text-muted"><small><%=@user.position%></small></span>
                <br />
                <span class="text-muted"><small><%=@user.occupation.contact_number%></small></span>

              </div>
              <div class="col-xs-3 text-right">
                <%=link_to edit_members_occupation_path(@user.occupation) do %>
                  <btn class="btn btn-sm btn-warning btn-icon"><i class="fa fa-pencil"></i></btn>
                <% end %>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card">
      <div class="header">
        <h4 class="title"> Activity Logs </h4>
      </div>
      <div class="content">
      </div>
    </div>
  </div>
</div>
