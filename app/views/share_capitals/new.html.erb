<div class="col-lg-4 col-lg-offset-4  col-sm-4 col-md-4 col-xs-12">
  <div class="card card-user">
     <div class="image">
     </div>
     <div class="content">
         <div class="author">
           <%=image_tag(@user.photo.url(:thumb), class: "avatar border-white") %>
           <!-- <img class="avatar border-white" src="assets/img/faces/face-2.jpg" alt="..."/> -->
           <h4 class="title"><%=@user.full_name %><br />
              <a href="#"><small><%=@user.occupation.try(:position) %></small></a>
           </h4>
         </div>
     </div>
     <hr>
     <div>
    <div class="content">
      <%=simple_form_for [@user, @share_capital], url: :user_share_capitals do |f| %>
      <%=f.error_notification %>
        <%=f.input :date_opened, as: :string, input_html: { class: "datepicker"} %>
        <%= f.input :account_number %>
        <div class="modal-footer">
          <%= f.submit "Open Share Capital", class: "btn btn-success", data: {disable_with: "Opening Account..."} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
