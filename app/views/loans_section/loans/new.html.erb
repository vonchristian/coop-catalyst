<div class="col-lg-5 col-lg-offset-3  col-sm-4 col-md-4 col-xs-12">
  <div class="card card-user">
    <div class="header">
       <center>New Loan Application</center>
       <hr>
    </div>
    <div class="image">
    </div>
    <div class="author">
      <%=image_tag(@user.photo.url(:thumb), class: "avatar border-white") %>
      <h4 class="title"><%=@user.full_name %><br />
        <a href="#"><small><%=@user.occupation.try(:position) %></small></a>
      </h4>
    </div>
    <div class="content">
      <%=simple_form_for [@user, @loan], url: :loans_section_user_loans do |f| %>
      <%=f.error_notification %>
      <%=f.input :loan_product_id, collection: LoansSection::LoanProduct.all.map{ |a| [a.name, a.id] }, as: :radio_buttons, label: "Type of Loan" %>

      <%=f.input :date, as: :string, input_html: { class: "datepicker" } %>
      <%=f.input :amount %>
      <div class="modal-footer">
        <%=f.submit "Apply", class: "btn btn-primary", data: { disable_with: "Saving Loan Application..."} %>
      </div>
      <% end %>
    </div>
  </div>
</div>
